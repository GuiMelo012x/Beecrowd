import java.util.Scanner;
public class Main{
	public static void main(String[] args){
	Scanner sc = new Scanner(System.in);
	int c1 = sc.nextInt();
	int n1 = sc.nextInt();
	double v1 = n1*sc.nextDouble();
	int c2 = sc.nextInt();
	int n2 = sc.nextInt();
	double v2 = n2*sc.nextDouble();
	System.out.printf("VALOR A PAGAR: R$ %.2f\n", v1+v2);
	}
} 
